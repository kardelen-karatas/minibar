<section id="edit-bar">
  <h3>Modifier le bar <span>{{bar.name}}</span></h3>

  <form action="/bars/{{bar.id}}/edit" method="POST">
    <label>
      <h6>Nom du bar :</h6>
      <input type="text" name="name" value="{{bar.name}}" />
    </label>
    

    <label>
      <h6>Adresse du bar :</h6>
      <input type="text" name="address" value="{{bar.address}}"/>
    </label>

    <label>
      <h6>Minimum pour payer en CB :</h6>
      <input type="number" name="minimumCb" value="{{bar.minimumCb}}"/>
    </label>

    <img id="blah" src="{{bar.imageURL}}" alt="your image" width="300" style="margin-bottom: 24px;"/>

    <button class="btn btn-green">Sauvegarder</button>
  </form>

  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      
      reader.onload = function(e) {
        $('#blah').attr('src', e.target.result);
      }
      
      reader.readAsDataURL(input.files[0]); // convert to base64 string
    }
  }

  $("#imageUrl").change(function() {
    readURL(this);
  });
</script>