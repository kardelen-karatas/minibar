<div class="signup">
    <form action="/signup" method="POST">
        <label for="username">
            Username
            <input type="text" name="username">
        </label>

        <label for="password">
            Password
            <input type="password" name="password">
        </label>

        <button>Sign in</button>
    </form>
    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
</div>