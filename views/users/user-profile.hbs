{{#if userInSession}}
  <section id="profile">
    <div class="profile-card">
      <div class="id">
        <img src="https://api.adorable.io/avatars/150/abott@adorable.png" alt="" class="avatar">
        <h2>{{ userInSession.username }}</h2>
      </div>
    </div>

    <div class="user-bars">
        <h2>Mes bars préférés</h2>
        {{#each bars}}
          <div class="bar">
            <img src="" alt="">
            <p class="bar-name">{{name}}</p>
            <p>{{address}}</p>
          </div>
        {{/each}}
    </div>


    <div class="user-favorite-bars">
      <h2>Mes bars ajoutés</h2>
      {{#each bars}}
        <div class="bar">
          <img src="" alt="">
          <p class="bar-name">{{name}}</p>
          <p>{{address}}</p>
        </div>
      {{/each}}
    </div>
  </section>
{{else}}
  <section id="unregistered">
    <div>
      <p>Vous devez être connecté(e) pour accéder à cette page !</p>
      <div class="links">
        <a href="/signup" class="btn btn-green">Sign up</a>
        <a href="/login" class="btn btn-green-light">Log in</a>
      </div>
    </div>
  </section>
{{/if}}